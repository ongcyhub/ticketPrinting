<Configuration>
    <Appenders>
        <File name="MyFile" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="Error">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>
